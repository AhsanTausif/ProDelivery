@model IEnumerable<ProDelivery.Models.TeamPage>

@{
    ViewBag.Title = "Index";
}

<!Doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Pro Delivery</title>
    <!--Font awesome CDN-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!--Scroll reveal CDN-->
    <script src="https://unpkg.com/scrollreveal"></script>
    <link href="~/Content/css/header.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/TeamPage.css" rel="stylesheet" />

</head>
<body>
    <header>
        <div class="container">
            <nav class="nav">
                <div class="menu-toggle">
                    <i class="fas fa-bars"></i>
                    <i class="fas fa-times"></i>
                </div>
                <a href="" class="logo">
                    <img src="~/Content/images/logo-3 (2).png" style="width: 225px; height: 100px" alt="" class="logo">
                </a>
                @if ((Session["sec_user_email"] == null || Session["rec_user_email"] == null || Session["admin_email"] == null) && Request.Cookies["user"] == null)
                {
                    <ul class="nav-list">
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/home/index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/senders/login" class="nav-link">Services</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/teampages/index" class="nav-link">Our Team</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/contacts/create" class="nav-link active">Contact Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/senders/login" class="nav-link">Login</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav-list">
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/home/index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/senders/services" class="nav-link">Services</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/teampages/index" class="nav-link">Our Team</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/contacts/create" class="nav-link active">Contact Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">@Html.ActionLink("Log Out", "SignOut", "Senders")</a>
                        </li>
                    </ul>
                }
            </nav>
        </div>
    </header>

    @foreach (var item in Model)
    {

        <section style="float: left;">
            <div class="container">
                <div class="card-wrapper">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card" style="margin-right: 30px;">

                                <img src="~/@Url.Content(item.Image)" alt="profile" class="profile">
                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>

                                <p class="profession">@Html.DisplayFor(modelItem => item.Profession)</p>
                                <p class="about">
                                    @Html.DisplayNameFor(model => model.Roll) : @Html.DisplayFor(modelItem => item.Roll)
                                </p>
                                <p class="about">
                                    @Html.DisplayNameFor(model => model.Section) : @Html.DisplayFor(modelItem => item.Section)
                                </p>
                                <p class="about">
                                    @Html.DisplayNameFor(model => model.Group) : @Html.DisplayFor(modelItem => item.Group)
                                </p>
                                <a href="" class="btn">Contact @Html.DisplayFor(modelItem => item.NickName)</a>
                                <ul class="social">
                                    <li><a href=""><i class="fab fa-facebook-square"></i> @Html.DisplayFor(modelItem => item.fb)</a></li>
                                </ul>
                                <ul class="social">                 
                                    <li><a href=""><i class="fas fa-envelope">@Html.DisplayFor(modelItem => item.gmail)</i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }


    <footer style="background-color: #602D90; margin-top: 1100px;">
        <div class="container">
            <div class="back-to-top" style="background-color: #602D90">
                <a href="#top"><i class="fas fa-chevron-up"></i></a>
            </div>
            <div class="footer-content">
                <div class="footer-content-about animate-up">
                    <h4><a style="color: white;" href="">Contact Us</a></h4>
                    <div class="asterisk"></div>
                </div>
                <div class="footer-content-divider animate-bottom">
                    <div class="social-media">
                        <h4>Follow Us</h4>
                        <ul class="social-icons">
                            <li>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-facebook-square"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-pinterest"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-tripadvisor"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/crafty.js"></script>
</body>
</html>