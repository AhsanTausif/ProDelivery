@model ProDelivery.Models.TempUser3

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pro Delivery</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--Font awesome CDN-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!--Scroll reveal CDN-->
    <script src="https://unpkg.com/scrollreveal"></script>
    <link href="~/Content/css/userprofile.css" rel="stylesheet" />
    <link href="~/Content/css/header.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="container">
            <nav class="nav">
                <div class="menu-toggle">
                    <i class="fas fa-bars"></i>
                    <i class="fas fa-times"></i>
                </div>
                <a href="" class="logo">
                    <img src="~/Content/images/logo-3 (2).png" style="width: 225px; height: 100px" alt="" class="logo">
                </a>
                <ul class="nav-list">
                    <li class="nav-item" style="background-color: #602D90">
                        <a href="~/home/index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item" style="background-color: #602D90">
                        <a href="" class="nav-link">Services</a>
                    </li>
                    <li class="nav-item" style="background-color: #602D90">
                        <a href="~/teamPages/index" class="nav-link">Our Team</a>
                    </li>
                    <li class="nav-item" style="background-color: #602D90">
                        <a href="" class="nav-link active">About Us</a>
                    </li>
                    <li class="nav-item" style="background-color: #602D90">
                        <a href="~/admins/login" class="nav-link">Log In</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="padding-top: 85px">
            <h4 style="padding-left: 145px">Login For Admin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Admin_Email, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admin_Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admin_Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Admin_Password, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admin_Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admin_Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <p class="text-danger" style="margin-left: 40px ; font-family: sans-serif">
                @ViewBag.Error
            </p>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-outline-danger" href="~/home/index" role="button">Go Back</a>
                </div>
            </div>


        </div>
    }
    <footer style="background-color: #602D90">
        <div class="container">
            <div class="back-to-top" style="background-color: #602D90">
                <a href="#top"><i class="fas fa-chevron-up"></i></a>
            </div>
            <div class="footer-content">
                <div class="footer-content-about animate-up">
                    <h4><a style="color: white;" href="">Contact Us</a></h4>
                    <div class="asterisk"></div>
                </div>
                <div class="footer-content-divider animate-bottom">
                    <div class="social-media">
                        <h4>Follow Us</h4>
                        <ul class="social-icons">
                            <li>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-facebook-square"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-pinterest"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-tripadvisor"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/crafty.js"></script>

    <script language="JavaScript">

        javascript: window.history.forward(1);

    </script>

</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
