@model ProDelivery.Models.Receiver

@{
    ViewBag.Title = "UserProfile";
}

<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Pro Delivery</title>
    <!--Font awesome CDN-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!--Scroll reveal CDN-->
    <script src="https://unpkg.com/scrollreveal"></script>
    <link href="~/Content/css/userprofile.css" rel="stylesheet" />
    <link href="~/Content/css/header.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container">
            <nav class="nav">
                <div class="menu-toggle">
                    <i class="fas fa-bars"></i>
                    <i class="fas fa-times"></i>
                </div>
                <a href="" class="logo">
                    <img src="~/Content/images/logo-3 (2).png" style="width: 225px; height: 100px" alt="" class="logo">
                </a>
                @if (Session["rec_user_email"] == null)
                {
                    <ul class="nav-list">
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/home/index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">Services</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">Our Team</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/contacts/create" class="nav-link active">Contact Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/receivers/login" class="nav-link">Login</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav-list">
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/home/index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">Services</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">Our Team</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="~/contacts/create" class="nav-link active">Contact Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item" style="background-color: #602D90">
                            <a href="" class="nav-link">@Html.ActionLink("Log Out", "SignOut", "Receivers")</a>
                        </li>
                    </ul>
                }
            </nav>
        </div>
    </header>
    <!--Header Ends-->

    <section id="top">
        <div class="container">
                <h1 class="header-user-profile" style="margin-top: 13rem;">User Profile</h1>
                <div class="card-wrapper">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card" style="margin-right: 30px;">
                                <img src="https://i.pinimg.com/originals/0c/3b/3a/0c3b3adb1a7530892e55ef36d3be6cb8.png" class="card-img">

                                <h1>@Html.DisplayFor(model => model.Rec_Name)</h1>
                                <p class="profession">Receiver User</p>
                                <p class="about">
                                    Thank You, @Html.DisplayFor(model => model.Rec_Name) for being our Customer.
                                    Your details can only be viewed by you.
                                </p>
                                <p class="about">
                                    <strong>Contact No. :</strong>
                                    @Html.DisplayFor(model => model.Rec_Phone)
                                </p>
                                @*<a href="" class="btn">Update Profile</a>*@
                                <a href="~/receivers/Index" class="btn" style="background-color:lightgreen;">Check Package</a>
                                <ul class="social">
                                    <li><i class="fas fa-envelope"></i></li>
                                    <li><a class="profession" style="font-size: 20px;" href="">@Html.DisplayFor(model => model.Rec_Email)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

                

    <footer style="background-color: #602D90">
        <div class="container">
            <div class="back-to-top" style="background-color: #602D90">
                <a href="#top"><i class="fas fa-chevron-up"></i></a>
            </div>
            <div class="footer-content">
                <div class="footer-content-about animate-up">
                    <h4><a style="color: white;" href="">Contact Us</a></h4>
                    <div class="asterisk"></div>
                </div>
                <div class="footer-content-divider animate-bottom">
                    <div class="social-media">
                        <h4>Follow Us</h4>
                        <ul class="social-icons">
                            <li>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-facebook-square"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-pinterest"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-tripadvisor"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/crafty.js"></script>
</body>
</html>