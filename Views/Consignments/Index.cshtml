@model IEnumerable<ProDelivery.Models.Consignment>

@{
    ViewBag.Title = "Index";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->

    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/css/owl.carousel.min.css" rel="stylesheet" />
    <!-- Style -->
    <link href="~/Content/css/table.css" rel="stylesheet" />
    <link href="~/Content/css/table2.css" rel="stylesheet" />

    <title>Pro Delivery - Consignments </title>
</head>
<body>

    <h2 class="mb-5" style="text-align: center">Pro Delivery - Consignments</h2>

    <a class="btn btn-outline-danger" style="color: aliceblue; padding-left: 10px" href="~/admins/adminProfile" role="button">Go Back</a>

    @if (Session["admin_email"] == null && Request.Cookies["user"] == null)
    {
        <div>
            <div>
                <div>
                    <h3 style="color: aqua">Please Log In First</h3>
                </div>
                <a href="~/admins/login" style="color: aqua">Login</a>
            </div>

        </div>

    }
    else
    {
      <div class="content">

        <div class="container">

            <div class="table-responsive">

                <table class="table table-striped custom-table">
                    <thead>
                        <tr>
                            <th scope="col"> Update</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.Rec_Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Receiver.Rec_Email)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Rec_Address)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Branch.Branch_Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Branch_Address)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Category)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.No_Of_Items)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.Total_Weight)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.Description)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Shipper_Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Shipper_Phone)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Req_Status)</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr scope="row">
                                <td style="background-color:black;"><a href="#" class="more"> @Html.ActionLink("Update Status", "Edit", new { id = item.Shipper_Phone })</a></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rec_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Receiver.Rec_Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rec_Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Branch.Branch_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Branch_Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.No_Of_Items)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total_Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shipper_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shipper_Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Req_Status)
                                </td>

                                <td><a href="#" class="more"> @Html.ActionLink("Edit", "Edit", new { id = item.Shipper_Phone })</a></td>
                                <td><a href="#" class="more"> @Html.ActionLink("Details", "Details", new { id = item.Shipper_Phone })</a></td>
                                <td><a href="#" class="more"> @Html.ActionLink("Delete", "Delete", new { id = item.Shipper_Phone })</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>

    </div>
    }

    <script src="~/Scripts/extrajs/bootstrap.min.js"></script>
    <script src="~/Scripts/extrajs/popper.min.js"></script>
    <script src="~/Scripts/extrajs/main.js"></script>
    <script src="~/Scripts/extrajs/jquery-3.3.1.min.js"></script>
</body>
</html>

