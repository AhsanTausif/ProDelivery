@model ProDelivery.Models.Consignment

@{
    ViewBag.Title = "Services";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/lib/font-awesome/css/all.css")" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--========== BOX ICONS ==========-->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>

    <!--========== CSS ==========-->

    <link href="~/Content/css/test1.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/aboutus.css">
    <title>@ViewBag.Title - Pro Delivery</title>
</head>
<body>
    <header class="l-header" id="header">
        <nav class="nav bd-container">
            <img src="~/Content/images/logo-1.1.png" style="height: 50px; width: 145px" />
            <a href="#" class="nav__logo">Pro Delivery</a>

            <div class="nav__menu" id="nav-menu">
                <ul class="nav__list">
                    <li class="nav__item"><a href="~/home/index" class="nav__link active-link">Home</a></li>
                    <li class="nav__item"><a href="~/home/coverage" class="nav__link">Coverage Map</a></li>
                    <li class="nav__item"><a href="~/home/about" class="nav__link">About Us</a></li>
                    <li class="nav__item"><a href="~/teamPages/index" class="nav__link">Team</a></li>
                    <li class="nav__item"><a href="#services" class="nav__link">Services</a></li>
                    <li class="nav__item"><a href="#menu" class="nav__link">Offers</a></li>
                    <li class="nav__item"><a href="~/contacts/create" class="nav__link">Contact us</a></li>
                    @if ((Session["sec_user_email"] == null || Session["rec_user_email"] == null) && Request.Cookies["user"] == null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:greenyellow; margin-left: 10px;" role="button" aria-expanded="false">Log In<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/receivers/login">Log In as a Receiver</a></li>
                                <li><a href="~/senders/login">Log In as a Sender</a></li>
                                <li class="divider"></li>
                                <li><a href="~/admins/login">Log In as an Admin</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:greenyellow; margin-left: 10px;" role="button" aria-expanded="false">Sign Up<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/receivers/signUp">Sign Up as a Receiver</a></li>
                                <li><a href="~/senders/signUp">Sign Up as a Sender</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav__item"><a href="~/senders/userProfile" class="nav__link">User Profile</a></li>
                        <li class="nav__item"><a href="" class="nav-link">@Html.ActionLink("Log Out", "SignOut", "Senders")</a></li>
                    }
                    <li><i class='bx bx-moon change-theme' id="theme-button"></i></li>
                </ul>
            </div>

            <div class="nav__toggle" id="nav-toggle">
                <i class='bx bx-menu'></i>
            </div>
        </nav>
    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h4 style="text-align:center;"><br>Consignment</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Shipper_Name, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Shipper_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Shipper_Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Shipper_Phone, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Shipper_Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Shipper_Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Total_Weight, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Total_Weight, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Total_Weight, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.No_Of_Items, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.No_Of_Items, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.No_Of_Items, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Branch_Name, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Branch_Name", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Branch_Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Branch_Address, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Branch_Address", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Branch_Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Rec_Name, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Rec_Name", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rec_Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Rec_Address, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Rec_Address", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rec_Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Branch_Id, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Branch_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Branch_Id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Rec_Id, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-10">
                    @Html.DropDownList("Rec_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rec_Id, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Confirm" class="btn btn-default" />
                </div>
            </div>

            
            <a href="~/home/index" class="previous btn btn-primary" style="margin-left: 80px; margin-bottom: 30px;">&larr; Go Back</a>
        </div>
    }

    <!--========== FOOTER ==========-->
    <footer class="footer section bd-container" style="background-color:aliceblue;font-size:16px;">
        <div class="footer__container bd-grid">
            <div class="footer__content">
                <a href="#" class="footer__logo" style="font-size: 20px;">Pro Delivery</a>
                <span class="footer__description" style="color: black; font-size: 16px;">Online Courier Service</span>
                <div>
                    <a href="#" class="footer__social"><i class='bx bxl-facebook'></i></a>
                    <a href="#" class="footer__social"><i class='bx bxl-instagram'></i></a>
                    <a href="#" class="footer__social"><i class='bx bxl-twitter'></i></a>
                </div>
            </div>

            <div class="footer__content">
                <h1 class="footer__title" style="font-size: 20px;">Services</h1>
                <ul>
                    <li><a href="#" class="footer__link">Delivery</a></li>
                    <li><a href="#" class="footer__link">Pricing</a></li>
                    <li><a href="#" class="footer__link">Payments</a></li>
                    <li><a href="#" class="footer__link">Reserve your delivery request</a></li>
                </ul>
            </div>

            <div class="footer__content">
                <h1 class="footer__title" style="font-size: 20px;">Information</h1>
                <ul>
                    <li><a href="#" class="footer__link">Our Team</a></li>
                    <li><a href="#" class="footer__link">Contact us</a></li>
                    <li><a href="#" class="footer__link">Privacy policy</a></li>
                    <li><a href="#" class="footer__link">Terms of services</a></li>
                </ul>
            </div>

            <div class="footer__content">
                <h1 class="footer__title" style="font-size: 20px;">Address</h1>
                <ul style="color:black;">
                    <li>2/2, Nobodoy Housing, Mohammadpur</li>
                    <li>Dhaka, Bangladesh</li>
                    <li>01744697742</li>
                    <li>ProDelivery@gmail.com</li>
                </ul>
            </div>
        </div>

        <p class="footer__copy">&#169; 2021 Pro Delivery. All right reserved</p>
    </footer>

    <!--========== SCROLL REVEAL ==========-->
    <script src="https://unpkg.com/scrollreveal"></script>
    <!--========== MAIN JS ==========-->

    <script src="~/Scripts/testing.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
